<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<EditText
            android:layout_width="match_parent"
            android:hint="@string/search_keyword"
            android:layout_marginHorizontal="@dimen/card_margin_horizon"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSearch" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_keyword"
            android:layout_marginTop="@dimen/card_margin_vert"
            app:boxBackgroundColor="@color/white"
            android:layout_marginHorizontal="@dimen/card_margin_horizon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnSearch"
            android:layout_marginHorizontal="@dimen/card_margin_horizon"
            android:layout_width="match_parent"
            android:text="Search"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/progress_margin"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicalToolRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_marginTop="@dimen/layout_space"
        android:background="@android:color/darker_gray"/>

</LinearLayout>