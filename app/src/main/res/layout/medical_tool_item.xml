<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/medical_tool_image"
            android:layout_width="@dimen/image_lb"
            android:layout_height="@dimen/image_lb"
            android:visibility="visible"
            android:layout_margin="@dimen/layout_space_quarter" />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/medical_tool_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_space_quarter"
                android:layout_marginTop="@dimen/layout_space_quarter"
                android:layout_marginBottom="@dimen/layout_height"
                android:text="@string/medical_tool_name"
                android:textAppearance="?attr/textAppearanceBody1"/>

            <TextView
                android:id="@+id/medical_tool_avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_space_quarter"
                android:layout_marginTop="@dimen/none"
                android:text="Availability"
                android:textAppearance="?attr/textAppearanceCaption"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>